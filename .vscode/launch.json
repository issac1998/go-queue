            "cwd": "${workspaceFolder}",
            "showLog": true
        },
        {
            "name": "Debug Example",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/examples/simple/main.go",
            "env": {},
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "showLog": true
        },
        {
            "name": "Debug Compression & Dedup Example",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/examples/compression_dedup/main.go",
            "env": {},
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "showLog": true
        }
    ],
    "compounds": [
        {
            "name": "Debug Broker + Client",
            "configurations": [
                "Debug Broker"
            ]
        }
    ]
}