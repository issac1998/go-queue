{
    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "Debug Broker",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/broker/main.go",
            "args": [
                "-config=configs/broker.json"
            ],
            "env": {
                "GO_ENV": "development"
            },
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "showLog": true,
            "trace": "verbose"
        },
        {
            "name": "Debug Client - Create Topic",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/client/main.go",
            "args": [
                "-config=configs/client-create-topic.json"
            ],
            "env": {},
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "showLog": true
        },
        {
            "name": "Debug Client - Produce",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/client/main.go",
            "args": [
                "-config=configs/client-produce.json"
            ],
            "env": {},
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "showLog": true
        },
        {
            "name": "Debug Client - Consume",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/client/main.go",
            "args": [
                "-config=configs/client-consume.json"
            ],
            "env": {},
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "showLog": true
        },
        {
            "name": "Debug Client - Command Line Override",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/client/main.go",
            "args": [
                "-config=configs/client.json",
                "-cmd=produce",
                "-topic=debug-override",
                "-partition=0",
                "-message=Debug Override Message",
                "-count=1"
            ],
            "env": {},
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "showLog": true
        },
        {
            "name": "Debug Message Reading Test",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/test_message_reading.go",
            "env": {},
